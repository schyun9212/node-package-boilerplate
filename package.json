{
  "name": "@schyun9212/node-boilerplate",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": ">=16 <17"
  },
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "url": "https://github.com/schyun9212/node-boilerplate"
  },
  "author": {
    "name": "Anonymous"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-url": "^6.1.0",
    "@svgr/rollup": "^6.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.17.0",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --force-local && lerna link --force-local",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:dev": "lerna run build:dev",
    "prepublishOnly": "yarn bootstrap && yarn test && yarn build",
    "release": "lerna publish -y",
    "release:canary": "lerna publish --no-git-tag-version --canary --dist-tag next -y",
    "lint": "eslint ./packages/**/*.ts",
    "lint:fix": "eslint --fix ./packages/**/*.ts",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  }
}
